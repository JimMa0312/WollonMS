@using 卧龙管理网站.Models;
@{
    ViewBag.Title = "Index";
}
@model IEnumerable<ApplicationUser>

<h2>Index</h2>

<div class="panel panel-primary">
    <div class="panel-heading">
        用户信息
    </div>
    <table class="table table-striped">
        <tr>
            <th>ID</th><th>姓名</th><th>昵称</th><th>电子邮件</th>
        </tr>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="4" class="text-center">No User Accounts</td></tr>
            }
            else
            {
                foreach(ApplicationUser user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.UserNick</td>
                        <td>@user.Email</td>
                    </tr>
                }
            }
    </table>
</div>
@Html.ActionLink("新建用户", "Create", null, new { @class = "btn btn-primary" })